<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ShowRepoActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/book_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnmybooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="My Books"
        app:layout_constraintBottom_toBottomOf="@+id/book_list"
        app:layout_constraintEnd_toEndOf="@+id/book_list"
        app:layout_constraintTop_toTopOf="@+id/book_list"
        app:layout_constraintVertical_bias="0.902" />

</android.support.constraint.ConstraintLayout>