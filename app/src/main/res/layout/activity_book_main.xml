<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.books.BookPageActivity">


    <ImageView
        android:id="@+id/fondomain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="40dp" />


    <ImageView
        android:id="@+id/button_jugar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/btn_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_galeria"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_creditos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_creditos" />

    <ImageView
        android:id="@+id/button_creditos"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_bookinfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_jugar" />

    <ImageView
        android:id="@+id/button_salir"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="575dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_galeria" />


</android.support.constraint.ConstraintLayout>